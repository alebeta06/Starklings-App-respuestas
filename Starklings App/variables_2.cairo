// Define la función principal del programa.
fn main() -> () {
    // Declara una variable local `x` y le asigna el valor 10.
    let x = 10;

    // Comienza una estructura condicional (if-else).
    // Verifica si el valor de `x` es igual a 10.
    if x == 10 {
        // Si la condición es verdadera (x es igual a 10),
        // imprime "x is ten!" en la consola.
        println!("x is ten! ");
    } else {
        // Si la condición es falsa (x no es igual a 10),
        // imprime "x is not ten!" en la consola.
        println!("x is not ten! ");
    }
}