fn main() -> () {
    // Booleanos (`bool`)

    // Declara una variable booleana llamada `is_morning` y la establece en `true`.
    let is_morning = true;

    // Si `is_morning` es verdadero, imprime "Good morning!".
    if is_morning {
        println!("Good morning!");
    }

    // Declara otra variable booleana llamada `is_evening` y la establece en `false`.
    let is_evening = false;

    // Si `is_evening` es verdadero, imprime "Good evening!".
    if is_evening {
        println!("Good evening!");
    }
}